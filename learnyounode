// Ej 8
var http = require("http");
var string = "";
http.get(process.argv[2],(res) => {
	res.on('data',chunk =>{
		string + chunk.toString();
	});
	res.on('end', chunk => {
		console.log(string.length);
		console.log(string);
	});
	res.on('error', (err) => {
		console.error(err);
	});
});

